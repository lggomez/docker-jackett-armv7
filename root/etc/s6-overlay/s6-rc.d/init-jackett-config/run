#!/usr/bin/with-contenv bash
# shellcheck shell=bash

mkdir -p /run/jackett-temp

if [[ -z ${LSIO_NON_ROOT_USER} ]]; then
    if [[ "${AUTO_UPDATE,,}" == "true" ]]; then
        lsiown -R abc:abc \
            /app/Jackett
    fi

    #Â permissions
    lsiown -R abc:abc \
        /config \
        /run/jackett-temp
fi
